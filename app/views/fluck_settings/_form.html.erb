<div class="has-text-centered">
  <div class="field my-4">
    <%= form.label :banner_size %>

    <div class="control has-icons-left mt-1">
      <div class="select">
        <%= form.select :banner_size,
                        options_for_select(FluckSetting.banner_sizes.map { |k, _v| [k.capitalize, k] },
                                           setting.banner_size),
                        {}, required: true %>
        <div class="icon is-small is-left">
          <i class="fas fa-palette"></i>
        </div>
      </div>
    </div>
  </div>

  <div class="field my-4">
    <%= form.label :image_shape %>

    <div class="control has-icons-left mt-1">
      <div class="select">
        <%= form.select :image_shape,
                        options_for_select(FluckSetting.image_shapes.map { |k, _v| [k.capitalize.gsub('_', ' '), k] },
                                           setting.image_shape),
                        {}, required: true %>
        <div class="icon is-small is-left">
          <i class="fas fa-palette"></i>
        </div>
      </div>
    </div>
  </div>

  <div class="field my-4">
    <%= form.label :primary_color %>

    <div class="control has-icons-left mt-1" style="width: 50%; margin-left: auto; margin-right: auto;">
      <%= form.color_field :primary_color, class: 'input', list: true, required: true %>
      <span class="icon is-left"><i class="fas fa-tint"></i></span>
    </div>
  </div>

  <div class="field my-4">
    <%= form.label :text_color %>

    <div class="control has-icons-left mt-1" style="width: 50%; margin-left: auto; margin-right: auto;">
      <%= form.color_field :text_color, class: 'input', list: true, required: true %>
      <span class="icon is-left"><i class="fas fa-tint"></i></span>
    </div>
  </div>
</div>
