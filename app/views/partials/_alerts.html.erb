<% if notice %>
  <section class="hero is-info">
    <div class="hero-body">
      <div class="container">
        <h2 class="subtitle">
          <%= notice %>
        </h2>
      </div>
    </div>
  </section>
<% end %>

<% if alert %>
  <section class="hero is-danger">
    <div class="hero-body">
      <div class="container">
        <h2 class="subtitle">
          <%= alert %>
        </h2>
      </div>
    </div>
  </section>
<% end %>
