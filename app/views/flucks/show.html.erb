<div class="columns">
  <div class="column is-12">
    <section class="hero">
      <div
        class="hero-body"
        style="
          background-image: url(<%= url_for(@fluck.banner) %>); background-position: center;
          <%= 'background-size: cover; background-repeat: no-repeat;' if @fluck.setting.banner_size == 'cover' %>
          height: 300px;
        ">
      </div>
    </section>

    <div class="column is-12" style="background-color: white">
      <div class="columns">
        <div class="column is-12-mobile is-10-tablet is-offset-1-tablet is-8-desktop is-offset-2-desktop">
          <div class="container">
            <div class="media" style="margin-top: -32px;">
              <figure class="media-left">
                <p class="image is-96x96">
                  <%= image_tag @fluck.image,
                  class: "#{'is-rounded' if @fluck.setting.image_shape == 'circle'}",
                  style: "border: 5px white solid;
                  #{'border-radius: 25%;' if @fluck.setting.image_shape == 'square_with_rounded_corners'}",
                  alt: 'Fluck image' %>
                </p>
              </figure>

              <div class="media-content">
                <div class="content" style="margin: 25px 0 0 0">
                  <strong class="title is-2 has-text-black"><%= @fluck.name %></strong>
                  <button type="button" class="button ml-5" style="background-color: <%= @fluck.setting.primary_color %>; color: <%= @fluck.setting.text_color %>">Join</button>
                  <button type="button" class="button is-outlined ml-5" style="background-color: white; color: <%= @fluck.setting.primary_color %>; border: 2px <%= @fluck.setting.primary_color %> solid;">Leave</button>
                </div>

                <div class="content">
                  <p>
                    <small class="subtitle is-5 has-text-black"><%= @fluck.nickname %></small>
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="column is-12">
      <div class="container">
        <div class="columns">
          <div class="column is-12-mobile is-8-tablet">
            <div class="my-4">
            </div>
          </div>

          <div class="column is-hidden-mobile is-4-tablet">
            <div class="card my-4" style="box-shadow: none; border: 2px <%= @fluck.setting.primary_color %> solid; border-radius: 5px;">
              <header class="card-header" style="background-color: <%= @fluck.setting.primary_color %>; width: 100%;">
                <p class="card-header-title" style="color: <%= @fluck.setting.text_color %>">
                  About
                </p>

                <% if policy(@fluck).edit? %>
                  <span style="float: right; padding: 0.75rem 1rem;">
                    <%= link_to 'Edit Fluck',
                                edit_fluck_path(@fluck.nickname),
                                style: "color: #{@fluck.setting.text_color};
                                        font-size: 14px;
                                        padding: 6px;
                                        border: 1px #{@fluck.setting.text_color} solid;
                                        border-radius: 2px;" %>
                  </span>
                <% end %>
              </header>

              <div class="card-content" style="padding: 1rem;">
                <div class="content">
                  <%= @fluck.description %>

                  <div class="tile is-ancestor mb-0 mt-2">
                    <div class="tile is-parent pb-1">
                      <div class="tile is-child">
                        <%= pluralize(@fluck.tubas.count, 'tuba') %>
                      </div>
                      <div class="tile is-child">
                        30 posts
                      </div>
                    </div>
                  </div>

                  <hr class="my-4">

                  <p>
                    <i class="fas fa-birthday-cake mr-1"></i> Created <%= l @fluck.created_at.to_date, format: :long %>
                  </p>
                </div>
              </div>
            </div>

            <% if @fluck.rules.size > 0 %>
              <div class="card my-4" style="box-shadow: none; border: 2px <%= @fluck.setting.primary_color %> solid; border-radius: 5px;">
                <header class="card-header" style="background-color: <%= @fluck.setting.primary_color %>; width: 100%;">
                  <p class="card-header-title" style="color: <%= @fluck.setting.text_color %>">
                    Rules
                  </p>
                  <span style="float: right; padding: 0.75rem 1rem;">
                    <%= link_to 'Edit Rules',
                                root_path,
                                style: "color: #{@fluck.setting.text_color};
                                        font-size: 14px;
                                        padding: 6px;
                                        border: 1px #{@fluck.setting.text_color} solid;
                                        border-radius: 2px;" %>
                  </span>
                </header>

                <div class="card-content" style="padding: 1rem;">
                  <div class="content">
                    <div class="panel">
                      <% @fluck.rules.each_with_index do |rule, index| %>
                        <div style="border-bottom: 1px solid #ededed">
                          <% if rule.description.present? %>
                            <a class="panel-block accordion-item" div-id="<%= "content-#{index + 1}" %>" angle-id="<%= "angle-#{index + 1}" %>" style="border: none;">
                              <span style="width: 100%">
                                <%= "#{index + 1}. #{rule.title}" %>
                                <span style="float: right;">
                                  <i class="fas fa-angle-down" aria-hidden="true" id="<%= "angle-#{index + 1}" %>"></i>
                                </span>
                              </span>
                            </a>
                            <div class="is-hidden" id="<%= "content-#{index + 1}" %>">
                              <p class="px-2 py-2" style="font-size: 14px">
                                <%= rule.description %>
                              </p>
                            </div>
                          <% else %>
                            <a class="panel-block" style="border: none;">
                              <span style="width: 100%">
                                <%= "#{index + 1}. #{rule.title}" %>
                              </span>
                            </a>
                          <% end %>
                        </div>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>

            <div class="card my-4" style="box-shadow: none; border: 2px <%= @fluck.setting.primary_color %> solid; border-radius: 5px; position: sticky; top: 60px;">
              <div class="card-content" style="padding: 1rem;">
                <div class="content">
                  <%= render partial: 'partials/footer', locals: { type: 2 } %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
