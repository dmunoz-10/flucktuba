<div class="container">
  <div class="columns is-reverse-tablet mt-5">
    <div class="column is-12-mobile is-4-tablet is-pulled-right has-text-centered mt-6">
      <h2 class="title is-2">Settings</h2>



      <div class="mt-4">
        <%= form_with model: current_user.profile, local: true do |form| %>
          <div class="field">
            <div class="control has-icons-left">
              <div class="select">
                <%= form.select :color_theme,
                                select_options(Profile.color_themes.map { |k, v| [k, v] },
                                               'Choose a theme',
                                               Profile.color_themes[current_user.profile.color_theme]),
                                { required: true} %>
                <div class="icon is-small is-left">
                  <i class="fas fa-palette"></i>
                </div>
              </div>
            </div>
          </div>
          <%= form.button 'Update settings', class: 'button is-link mt-4' %>
        <% end %>
      </div>
    </div>

    <div class="column is-12-mobile is-8-tablet is-pulled-left">
      <h2 class="title is-2 has-text-centered">Edit <%= resource_name.to_s.humanize %></h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), multipart: true, html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="columns">
          <div class="column is-12-mobile is-4-tablet is-3-desktop">
            <div class="columns is-centered">
              <div class="column is-10">
                <h4 class="subtitle is-4">Avatar</h4>
                <% if current_user.avatar.attached? %>
                  <%= image_tag current_user.avatar, class: 'image is-96x96', style: 'border-radius: 20%' %>
                <% else %>
                  <%= image_tag "https://api.adorable.io/avatars/96/#{current_user.username}.png", class: 'image is-96x96', style: 'border-radius: 20%' %>
                <% end %>
              </div>
            </div>
          </div>

          <div class="column is-12-mobile is-8-tablet is-9-desktop has-text-centered">
            <%= render partial: 'partials/dropzone', locals: { f: f, file: :avatar, max_file_size: 5, max_files: 1 } %>
          </div>
        </div>

        <div class="field is-horizontal column is-12 my-2">
          <div class="field-label is-normal">
            <%= f.label :username, class: 'label' %>
          </div>
          <div class="field-body">
            <div class="field">
              <p class="control has-icons-left">
                <%= f.text_field :username, class: 'input', autofocus: true, autocomplete: "username" %>
                <span class="icon is-left"><i class="fas fa-user"></i></span>
              </p>
            </div>
          </div>
        </div>

        <div class="field is-horizontal column is-12 my-2">
          <div class="field-label is-normal">
            <%= f.label :email, class: 'label' %>
          </div>
          <div class="field-body">
            <div class="field">
              <p class="control has-icons-left">
                <%= f.email_field :email, class: 'input', autocomplete: "email" %>
                <span class="icon is-left"><i class="fas fa-envelope"></i></span>
              </p>
            </div>
          </div>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="field is-horizontal column is-12 my-2">
          <div class="field-label is-normal">
            <%= f.label :password, class: 'label' %>
          </div>
          <div class="field-body">
            <div class="field">
              <p class="control has-icons-left">
                <%= f.password_field :password, class: 'input', autocomplete: "new-password" %>
                <span class="icon is-left"><i class="fas fa-lock"></i></span>
              </p>
              <p class="help">
                <% if @minimum_password_length %>
                  <em><%= @minimum_password_length %> characters minimum</em>
                <% end %>
                <i>(leave blank if you don't want to change it)</i>
              </p>
            </div>
          </div>
        </div>

        <div class="field is-horizontal column is-12 my-2">
          <div class="field-label is-normal">
            <%= f.label :password_confirmation, class: 'label is-capitalized' %>
          </div>
          <div class="field-body">
            <div class="field">
              <p class="control has-icons-left">
                <%= f.password_field :password_confirmation, class: 'input', autocomplete: "new-password" %>
                <span class="icon is-left"><i class="fas fa-lock"></i></span>
              </p>
            </div>
          </div>
        </div>

        <div class="field is-horizontal column is-12 my-2">
          <div class="field-label is-normal">
            <%= f.label :current_password, class: 'label is-capitalized' %>
          </div>
          <div class="field-body">
            <div class="field">
              <p class="control has-icons-left">
                <%= f.password_field :current_password, class: 'input', autocomplete: "current-password" %>
                <span class="icon is-left"><i class="fas fa-lock"></i></span>
              </p>
              <p class="help">
                <i>(we need your current password to confirm your changes)</i>
              </p>
            </div>
          </div>
        </div>

        <div class="mt-4 has-text-centered">
          <%= f.button 'Update', class: 'button is-success' %>
        </div>
      <% end %>

      <div class="mt-5">
        <h4 class="title is-4 mb-1">Cancel my account</h4>
        <p class="mt-4 mb-2">Unhappy?</p>
        <%= button_to 'Cancel my account', registration_path(resource_name), class: 'button is-danger is-outlined mb-2', data: { confirm: 'Are you sure?' }, method: :delete %>
        <%= link_to 'Back', :back, class: 'is-link' %>
      </div>
    </div>
  </div>
</div>
